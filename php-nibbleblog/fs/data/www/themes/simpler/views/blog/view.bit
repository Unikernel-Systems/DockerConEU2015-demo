<?php

// There are no posts
if(empty($posts))
{
	echo '<p>'.$Language->get('there are no posts').'</p>';
}
else
{
	// Disqus comments
	include('disqus_comments.bit');

	// Facebook comments
	include('facebook_comments.bit');

	// Print each post
	foreach($posts as $post)
	{
		// Include the post template for each post
		include('post.bit');
	}
}

// Blog pager
include('pager.bit');

?>