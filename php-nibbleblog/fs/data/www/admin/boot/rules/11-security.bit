// Prevent CSRF
if( ($_SERVER['REQUEST_METHOD'] == 'POST') && $Login->is_logged() )
{
	$token = isset($_POST['token']) ? Validation::sanitize_html($_POST['token']) : false;

	if( !Session::validFormToken($token) )
	{
		$Login->logout();
		Redirect::controller('admin','user','login');
	}
	else
	{
		unset($_POST['token']);
	}
}

